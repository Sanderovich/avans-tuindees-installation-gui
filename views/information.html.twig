{% extends  "layouts/base.html.twig " %}

{% block title %}Intial Setup{% endblock %}

{% block content %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center">
                <h3>Bijna klaar!</h3>
                <p>Vul hier onder de vereiste gegevens in voor een fijnlose installatie</p>
                <form action="/avans-tuindees-installation-gui/public/setup-information" method="POST">
                    <p class="mt-4"><b>Algemeen</b></p>
                    <div class="form-group row">
                        <label for="input-name" class="col-sm-3 col-form-label">Naam</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" value="" placeholder="Example" id="input-name" name="name">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-url" class="col-sm-3 col-form-label">Url</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" value="" placeholder="https://example.nl" id="input-url" name="url">
                        </div>
                    </div>

                    <p class="mt-4"><b>Dataopslag</b></p>

                    <div class="form-group row">
                        <label for="input-db-name" class="col-sm-3 col-form-label">Database</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" value="" placeholder="Example" id="input-db-name" name="db_name">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-db-user" class="col-sm-3 col-form-label">Gebruiker</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" value="" placeholder="John Doe" id="input-db-user" name="db_user">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-db-user-password" class="col-sm-3 col-form-label">Wachtwoord</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" value="" placeholder="" id="input-db-user" name="db_user_password">
                        </div>
                    </div>

                    <p class="mt-4"><b>E-mail</b></p>

                    <div class="form-group row">
                        <label for="input-email-driver" class="col-sm-3 col-form-label">Driver</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" disabled value="smtp" placeholder="John Doe" id="input-email-driver" name="email_driver">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-email-host" class="col-sm-3 col-form-label">Host</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="smtp.example.com" id="input-email-host" name="email_host">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-email-port" class="col-sm-3 col-form-label">Port</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" placeholder="25565" id="input-email-port" name="email_port">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-email-user" class="col-sm-3 col-form-label">Gebruiker</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" value="" placeholder="John Doe" id="input-db-user" name="db_user">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-email-user-password" class="col-sm-3 col-form-label">Wachtwoord</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" value="" placeholder="" id="input-email-user" name="email_user_password">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-email-from-address" class="col-sm-3 col-form-label">Van Adress</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" value="" placeholder="example@gmail.com" id="input-email-from-address" name="email_from_address">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-email-from-name" class="col-sm-3 col-form-label">Van Naam</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" value="" placeholder="John Doe" id="input-email-from-name" name="email_from_name">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-email-encryption" class="col-sm-3 col-form-label">Encryptie</label>
                        <div class="col-sm-9">
                            <select name="email_encryption" id="input-email-encryption" class="form-control">
                                <option value="tls">tls</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            Ga Verder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}